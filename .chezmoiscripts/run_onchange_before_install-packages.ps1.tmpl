Set-StrictMode -Version 3.0
$ErrorActionPreference = "Stop"

# Self-elevate the script if required
if (-Not ([Security.Principal.WindowsPrincipal] [Security.Principal.WindowsIdentity]::GetCurrent()).IsInRole([Security.Principal.WindowsBuiltInRole] 'Administrator')) {
  if ([int](Get-CimInstance -Class Win32_OperatingSystem | Select-Object -ExpandProperty BuildNumber) -ge 6000) {
    $CommandLine = "-NoExit -File `"" + $MyInvocation.MyCommand.Path + "`" " + $MyInvocation.UnboundArguments
    Start-Process -Wait -FilePath PowerShell.exe -Verb Runas -ArgumentList $CommandLine
    Exit
  }
}

Set-ExecutionPolicy unrestricted

echo "Install choco"
Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))

echo "Install packages"
{{ if gt (len .commonpackages.choco) 0 -}}
choco install -y {{ .commonpackages.choco | join " " }}
{{ end }}

{{- if eq .where "home" }}
{{ if gt (len .personalpackages.choco) 0 -}}
choco install -y {{ .personalpackages.choco | join " " }}
{{ end }}
{{- end }}

{{- if eq .where "work" }}
{{ if gt (len .workpackages.choco) 0 -}}
choco install -y {{ .workpackages.choco | join " " }}
{{ end }}
{{- end }}


