# Mise installtion
echo 'Installing mise...'
if type ~/.local/bin/mise > /dev/null; then
  echo 'Mise is already installed'
else
  curl -sS https://mise.run | MISE_QUIET=1 sh > /dev/null
fi

# bitwarden cli
echo 'Installing bitwarden-cli...'
if type ~/.local/bin/bw > /dev/null; then
  echo 'bitwarden-cli is already installed'
else
  curl -sSL "https://vault.bitwarden.com/download/?app=cli&platform=linux" -o bw.zip > /dev/null
  unzip bw.zip -d ~/.local/bin/ > /dev/null
  rm bw.zip
fi

